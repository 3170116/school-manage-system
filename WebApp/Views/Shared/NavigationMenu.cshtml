@using WebApp.ViewModels
@model ProfileViewModel

<nav class="navbar navbar-expand-lg navbar-light bg-light">

    <img class="navbar-brand" src="https://i.pinimg.com/originals/37/86/00/3786001447986993c2cd5bbfe77c9645.png" alt="Logo" height="60" />

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse navbar-inverse" id="navbarNav">
        <div class="container-fluid">

            <ul class="navbar-nav">

                <li class="nav-item active">
                    <a href="@Url.Action("Index","Profile")" class="nav-link"><i class="fa fa-home"></i> Αρχική</a>
                </li>

                <li class="nav-item dropdown pointer">
                    <a class="nav-link dropdown-toggle pointer" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-book-reader"></i> Μαθητές</a>

                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">

                        @if (Model.ShowModifyStudentMenuItems)
                        {
                            <a class="dropdown-item"><i class="fa fa-plus"></i> Προσθήκη μαθητή</a>
                        }

                        <a class="dropdown-item"><i class="fa fa-plus"></i> Προβολή μαθητή</a>
                        <a class="dropdown-item"><i class="fa fa-plus"></i> Προσθήκη βαθμού</a>
                        <a class="dropdown-item"><i class="fa fa-sticky-note-o"></i> Προβολή απουσιών</a>

                        @if (Model.ShowCertificateMenuItem)
                        {
                            <a class="dropdown-item"><i class="fa fa-file-text-o"></i> Απολυτήριο</a>
                        }

                        <a class="dropdown-item"><i class="fa fa-file-excel-o"></i> Βαθμολογίες</a>

                        @if (Model.ShowModifyStudentMenuItems)
                        {
                            <a class="dropdown-item text-danger"><i class="fa fa-remove"></i> Διαγραφή μαθητή</a>
                        }

                    </div>
                </li>

                <li class="nav-item dropdown pointer">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-chalkboard-teacher"></i> Καθηγητές</a>

                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">

                        @if (Model.ShowModifyTeacherMenuItems)
                        {
                            <a class="dropdown-item" data-toggle="modal" data-target="#AddTeacherModal"><i class="fa fa-plus"></i> Προσθήκη</a>
                        }

                        <a class="dropdown-item"><i class="fa fa-plus"></i> Προβολή</a>

                        @if (Model.ShowModifyTeacherMenuItems)
                        {
                            <a class="dropdown-item"><i class="fa fa-edit"></i> Τροποποίηση</a>
                            <a class="dropdown-item text-danger"><i class="fa fa-remove"></i> Διαγραφή</a>
                        }

                    </div>
                </li>

                <li class="nav-item dropdown pointer">
                    <a href="@Url.Action("Info","Profile")" class="nav-link"><i class="fa fa-info"></i> Προσωπικά στοιχεία</a>
                </li>

            </ul>

            @if (Model.ShowManagementMenuItem)
            {
                <ul class="nav navbar-nav navbar-right pointer">
                    <li class="nav-item" id="show-up-nav-item">
                        <a class="nav-link"><i class="fa fa-gear"></i> Διαχείριση ωρολογίου προγράμματος</a>
                    </li>
                </ul>
            }

        </div>
    </div>

</nav>